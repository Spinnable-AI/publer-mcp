# Publer MCP Server Configuration
# Copy this file to .env and update with your actual values

# Publer API Credentials (Business plan required)
PUBLER_API_KEY=your-publer-api-key-here
PUBLER_WORKSPACE_ID=your-workspace-id-here

# Transport Configuration
# Options: stdio (local development) or sse (remote deployment)
TRANSPORT=stdio

# Server Configuration (for SSE transport)
PORT=8000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# Development Settings
DEVELOPMENT=true